<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wolf_team_view_form" model="ir.ui.view">
            <field name="name">wolf_team_view_form</field>
            <field name="model">wolf.team</field>
            <field name="arch" type="xml">
                <form string="wolf_team_form">
                    <header>
                        <button name="set_validated" string="Validated" class="oe_highlight" states="new"
                                type="object"/>
                        <button name="set_cancelled" string="Cancelled" class="oe_highlight" states="validated"
                                type="object"/>
                        <button name="set_rew" string="Cancelled" class="oe_highlight" states="canceled"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,validated" clickable="True"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="sexe" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wolf_team_view_tree" model="ir.ui.view">
            <field name="name">wolf_team_view_tree</field>
            <field name="model">wolf.team</field>
            <field name="arch" type="xml">
                <tree string="wolf_team_tree">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <record id="wolf_team_action" model="ir.actions.act_window">
            <field name="name">Team</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wolf.team</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="wolf_team_root" name="Team"/>
        <menuitem
                id="wolf_team_menu"
                name="Team"
                parent="wolf_team_root"
                action="wolf_team_action"
                sequence="1"/>

    </data>
</odoo>