<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wolf_popup_view_form" model="ir.ui.view">
            <field name="name">_view_form</field>
            <field name="model">wolf.popup</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                            <field name="birth_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" class="oe_highlight" name="update_birth_date" string="Validated"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>